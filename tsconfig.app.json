{

  "extends": "./tsconfig.json",
  
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "ES2020",
      "DOM",
      "DOMIterable"
    ],
    "module": "ESNext",
    "jsx": "react-jsx",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
    "@/*": ["src/*"]
     }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
